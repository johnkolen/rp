<%= ov_form  income, wrapper_data: {controller: "dtcselect"} do %>
  <%= ov_errors %>
  <%= ov_select :incomeable_type, data:{:"dtcselect-target"=>"selector",
      action: "change->dtcselect#update"} %>
  <%= ov_string_field :name %>
  <%= ov_decimal_field :amount %>
  <%= ov_date_field :start_date %>
  <%= ov_date_field :final_date %>
  <%= ov_string_field :notes %>
  <%= ov_string_field :location %>
  <%= ov_hidden_field :person_id %>

  <% @ov_obj.class.incomeable_types.each do |dtc_type| %>
  <%= ov_fields_for :incomeable, using: dtc_type,
      delegated_data:{:"dtcselect-target"=>"selected"} %>
  <% end %>
  <%= ov_submit %>
<% end %>
