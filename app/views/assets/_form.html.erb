<%= ov_form  asset do %>
  <%= ov_errors %>
  <%= ov_string_field :name %>
  <%= ov_decimal_field :value %>
  <%= ov_string_field :notes %>
  <%= ov_string_field :location %>
  <%= ov_hidden_field :person_id %>
  <% if @ov_obj.assetable_type %>
  <%= ov_fields_for :assetable %>
  <% else %>
  <%= ov_fields_for :assetable, using: CheckingAccount %>
  <% end %>
  <%= ov_submit %>
<% end %>
